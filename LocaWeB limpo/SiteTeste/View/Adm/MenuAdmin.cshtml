@{
    Page.Title = "Index";
    Layout = "~/View/Shared/_Layout.cshtml";

}


<div class="row">
    <div class="col-3">
        <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
            <a class="nav-link active" id="menuClientes" data-toggle="pill" href="~/View/Cliente/ListaClientes.cshtml" role="tab" aria-controls="v-pills-home" aria-selected="true">Home</a>
            <a class="nav-link" id="menuVeiculos" data-toggle="pill" href="~/View/Veiculo/VeiculosCadastrados.cshtml" role="tab" aria-controls="v-pills-profile" aria-selected="false">Profile</a>
            <a class="nav-link" id="menuLocacao" data-toggle="pill" href="~/View/Locacao/ListaLocacoes.cshtml" role="tab" aria-controls="v-pills-messages" aria-selected="false">Messages</a>
            <a class="nav-link" id="menuContato" data-toggle="pill" href="~/View/Contato/ListaContato.cshtml" role="tab" aria-controls="v-pills-settings" aria-selected="false">Settings</a>
        </div>
    </div>
    <div class="col-9">
        <div class="tab-content" id="v-pills-tabContent">
            <div class="tab-pane fade show active" id="menuClientes" role="tabpanel" aria-labelledby="v-pills-home-tab">


                @{
                    Page.Title = "Clientes Cadastrados";
                    Layout = "~/View/Shared/_Layout.cshtml";

                    IList<Cliente> listaClientes = new ClienteBO().ListaClientes();

                }

                <div class="row">
                    <div class="col-12">
                        <h1>Clientes Cadastrados</h1>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <table class="table table-bordered table-hover">
                            <tr>
                                <th>NOME</th>
                                <th>TELEFONE</th>
                                <th>CPF</th>
                                <th>AÇÕES</th>
                            </tr>
                            @foreach (var item in listaClientes)
                            {
                                <tr id="@item.ClienteID">
                                    <td>@item.Nome </td>
                                    <td>@item.Telefone </td>
                                    <td>@item.Cpf </td>
                                    <td>
                                        <a href="~/View/Cliente/AltCliente.cshtml?ClienteID=@item.ClienteID" class="btn btn-info">Alterar</a> |
                                        <a href=" #" onclick=" excluirAJAX('@item.ClienteID')" class="btn btn-danger">Excluir</a>

                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <a href="~/View/Cliente/CadCliente.cshtml" class="btn btn-primary"> Novo Cliente</a>
                    </div>
                </div>

                <script>
    function excluirAJAX(id)
    {
        var xhttp = new XMLHttpRequest();
        var apagar = confirm("Deseja excluir o registro?");
        if (apagar == true)
        {
            xhttp.onreadystatechange = function () {
                if (this.readyState == 4 && this.status == 200) {

                    var linha = document.getElementById(id);
                    linha.parentNode.removeChild(linha);




                }
            };
            xhttp.open("GET", "ExcluirCliente.cshtml?ClienteID=" + id, true);
            xhttp.send();

        }


    }
                </script>





            </div>
            <div class="tab-pane fade" id="menuVeiculos" role="tabpanel" aria-labelledby="v-pills-profile-tab">...</div>
            <div class="tab-pane fade" id="menuLocacao" role="tabpanel" aria-labelledby="v-pills-messages-tab">...</div>
            <div class="tab-pane fade" id="menuContato" role="tabpanel" aria-labelledby="v-pills-settings-tab">...</div>
        </div>
    </div>
</div>






